-- @nsURI ECore=http://www.eclipse.org/emf/2002/Ecore
module Augment_post;

create OUT : ECore  refining IN : ECore;

rule Post_Class {
	from c : ECore!EClass
	to c_post : ECore!EClass (
		name <- 'MTpos__'+c.name
	)
}

